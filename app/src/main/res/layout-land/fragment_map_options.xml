<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.Fragments.OptionsFragment">



    <ImageView
        android:id="@+id/options_button"
        android:src="@drawable/ic_baseline_info_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/details_button"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="5dp"
        />

    <ImageView
        android:id="@+id/details_button"
        app:layout_constraintLeft_toRightOf="@id/options_button"
        app:layout_constraintRight_toLeftOf="@id/demolition_button"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_baseline_settings_24"
        android:layout_marginTop="5dp"
        />

    <ImageView
        android:id="@+id/demolition_button"
        app:layout_constraintLeft_toRightOf="@id/details_button"
        app:layout_constraintRight_toLeftOf="@id/timestep_button"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_baseline_delete_outline_24"
        android:layout_marginTop="5dp"
        />

    <ImageView
        android:id="@+id/timestep_button"
        app:layout_constraintLeft_toRightOf="@id/demolition_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_baseline_play_arrow_24"
        android:layout_marginTop="5dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>
