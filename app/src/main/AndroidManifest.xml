<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.madworld">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:screenOrientation="sensor"
        android:theme="@style/AppTheme">

        <activity android:name=".view.Activities.SettingsActivity"
            android:windowSoftInputMode="adjustNothing"/>

        <activity
            android:name=".view.Activities.DetailsPopupActivity"
            android:theme="@style/AppTheme.Transparency"
            android:windowSoftInputMode="adjustNothing"
            />

        <activity
            android:name=".view.Activities.StatusPopupActivity"
            android:theme="@style/AppTheme.Transparency"
            android:windowSoftInputMode="adjustNothing"
            />

        <activity android:name=".view.Activities.LaunchScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.Activities.MapActivity"
            android:theme="@style/AppTheme.NoBar"
            android:windowSoftInputMode="adjustNothing"
            />
    </application>

</manifest>